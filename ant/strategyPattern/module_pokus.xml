<?xml version="1.0" encoding="UTF-8"?>
<project name="module_pokus" default="compile.module.pokus">
  <dirname property="module.pokus.basedir" file="${ant.file.module_pokus}"/>
  
  <property name="module.jdk.home.pokus" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.pokus" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.pokus" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.pokus" value="${compiler.args}"/>
  
  <property name="pokus.output.dir" value="${module.pokus.basedir}/out/production/Pokus"/>
  <property name="pokus.testoutput.dir" value="${module.pokus.basedir}/out/test/Pokus"/>
  
  <path id="pokus.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="pokus.module.production.classpath">
    <path refid="${module.jdk.classpath.pokus}"/>
    <pathelement location="${idea.home}/lib/annotations.jar"/>
  </path>
  
  <path id="pokus.runtime.production.module.classpath">
    <pathelement location="${pokus.output.dir}"/>
    <pathelement location="${idea.home}/lib/annotations.jar"/>
  </path>
  
  <path id="pokus.module.classpath">
    <path refid="${module.jdk.classpath.pokus}"/>
    <pathelement location="${pokus.output.dir}"/>
    <pathelement location="${idea.home}/lib/annotations.jar"/>
  </path>
  
  <path id="pokus.runtime.module.classpath">
    <pathelement location="${pokus.testoutput.dir}"/>
    <pathelement location="${pokus.output.dir}"/>
    <pathelement location="${idea.home}/lib/annotations.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.pokus">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.pokus">
    <patternset refid="excluded.from.module.pokus"/>
  </patternset>
  
  <path id="pokus.module.sourcepath">
    <dirset dir="${module.pokus.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.pokus" depends="compile.module.pokus.production,compile.module.pokus.tests" description="Compile module Pokus"/>
  
  <target name="compile.module.pokus.production" depends="register.custom.compilers" description="Compile module Pokus; production classes">
    <mkdir dir="${pokus.output.dir}"/>
    <javac2 destdir="${pokus.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.pokus}/javac">
      <compilerarg line="${compiler.args.pokus}"/>
      <bootclasspath refid="pokus.module.bootclasspath"/>
      <classpath refid="pokus.module.production.classpath"/>
      <src refid="pokus.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.pokus"/>
    </javac2>
    
    <copy todir="${pokus.output.dir}">
      <fileset dir="${module.pokus.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.pokus.tests" depends="register.custom.compilers,compile.module.pokus.production" description="compile module Pokus; test classes" unless="skip.tests"/>
  
  <target name="clean.module.pokus" description="cleanup module">
    <delete dir="${pokus.output.dir}"/>
    <delete dir="${pokus.testoutput.dir}"/>
  </target>
</project>