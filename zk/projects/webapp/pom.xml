    <build>
        <finalName>projects</finalName>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>config-projectsweb.properties</include>
                    <include>log4j.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>config-projectsweb.properties</exclude>
                    <exclude>log4j.xml</exclude>
                </excludes>
            </resource>
            <resource>
